{
  "manifest_version": 3,
  "name": "SecureSight",
  "version": "1.0",
  "description": "Detects suspicious websites with basic security checks.",
  "permissions": ["tabs", "activeTab", "scripting", "storage", "favicon"],
  "host_permissions": [
    "https://*/*",
    "http://*/*",
    "https://www.whoisxmlapi.com/*",
    "https://crt.sh/*" 
  ],
  "optional_host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "optional_permissions":[
    "tabs"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "padlock.png",
      "48": "padlock.png",
      "128": "padlock.png"
    }
  },
  "icons": {
    "16": "padlock.png",
    "48": "padlock.png",
    "128": "padlock.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["_favicon/*","stride.html", "stride.simple.js", "style.css"],
      "matches": ["<all_urls>"]
    }
  ]
}
